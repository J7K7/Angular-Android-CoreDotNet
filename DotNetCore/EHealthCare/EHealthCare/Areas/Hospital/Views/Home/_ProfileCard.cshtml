@model Boolean

<div class="col-xl-4">
    <div class="card overflow-hidden">
        <div class="bg-primary bg-soft">
            <div class="row">
                <div class="col-7">
                    <div class="text-primary p-3">
                        <h5 class="text-primary">Welcome Back !</h5>
                    </div>
                </div>
                <div class="col-5 align-self-end">
                    <img src="~/Areas/Hospital/Content/images/profile-img.png" alt="" class="img-fluid">
                </div>
            </div>
        </div>
        <div class="card-body pt-0">
            <div class="row">
                <div class="col-sm-3">
                    <div class="avatar-md profile-user-wid mb-4">
                        <img src="~/Content/Images/@Session["ProfileImage"]" alt="" class="img-thumbnail rounded-circle">
                    </div>
                    <h5 class="font-size-15 text-truncate" style="white-space:pre-wrap;">@Session["FirstName"] @Session["LastName"]</h5>
                </div>

                <div class="col-sm-9">
                    <div class="pt-4">
                        <div class="row">
                            <div class="col-6">
                                <p class="text-muted mb-0">Email</p>
                                <h5 class="font-size-15">@Session["Email"]</h5>
                            </div>
                            <div class="col-6">
                                <p class="text-muted mb-0">Mobile No.</p>
                                <h5 class="font-size-15">@Session["MobileNo"]</h5>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model)
                {
                    <div class="col-12">
                        <div class="mt-4 text-center">
                            <a href="/Hospital/Home/Profile" class="btn btn-primary waves-effect waves-light btn-sm">
                                View Profile
                                <i class="mdi mdi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>