@model List<EHealthCare.App_Start.UserImage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Hospital/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @{Html.RenderAction("ProfileCard", "Home", new { IsLink = true }); }

    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @{ int i = 0; }
                        @foreach (EHealthCare.App_Start.UserImage image in Model)
                        {
                            if (i == 0)
                            {
                                <li data-bs-target="#carouselExampleFade" data-bs-slide-to="@i" class="active"></li>
                            }
                            else
                            {
                                <li data-bs-target="#carouselExampleFade" data-bs-slide-to="@i"></li>
                            }
                            { i++; }
                        }
                    </ol>
                    <div class="carousel-inner">
                        @{ i = 0; }
                        @foreach (EHealthCare.App_Start.UserImage image in Model)
                        {
                            if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <img class="d-block img-fluid mx-auto" src="~/Content/Images/@image.Name" style="height: 250px;">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block img-fluid mx-auto" src="~/Content/Images/@image.Name" style="height: 250px;">
                                </div>
                            }
                            { i++; }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>