@{
    ViewBag.Title = "DoctorDetails";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Profile Details</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="#">Profile</a></li>
                <li class="active">Profile Details</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="white-box">
                <div class="">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="white-box">
                                    <img src="~/Content/Images/@Session["ProfileImage"]" style="margin-left: 50px;margin-top:-20px;margin-bottom:-10px;" width="200" height="200" class="img-circle" />
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="row" style="padding-left: 50px;">
                                <h3 class="box-title m-t-40">User Name : @Session["FirstName"] @Session["LastName"]</h3>
                            </div>
                            <div class="row">
                                @Html.ActionLink("Update Profile", "PutProfileImage", "Home", new { @class = "btn btn-primary waves-effect waves-light m-t-10" , style = "margin-left:20px;padding-right:20px;padding-left:20px;" })
                                @Html.ActionLink("Change Password", "ChangePassword", "Home", new { @class = "btn btn-primary waves-effect waves-light m-t-10", style = "margin-left:20px;padding-right:20px;padding-left:20px;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

