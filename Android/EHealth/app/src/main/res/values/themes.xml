<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EHealth" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/customPrimary</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="background">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="smallFont">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="mediumFontBold">
        <item name="android:textSize">18dp</item>
        <item name="android:color">@color/customPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mediumFont">
        <item name="android:textSize">16dp</item>
        <item name="android:color">@color/customPrimary</item>
    </style>

    <style name="largeFont">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/customPrimary</item>
    </style>

